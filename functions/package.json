{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec --require ts-node/register 'test/**/*.test.ts'",
    "test:watch": "mocha --reporter spec --require ts-node/register --watch 'test/**/*.test.ts'",
    "test:cleanup": "node test/cleanup-test-data.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^4.10.0",
    "dotenv": "^16.4.7",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.4.0",
    "googleapis": "^144.0.0",
    "mailparser": "^3.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.19",
    "@types/mailparser": "^3.4.5",
    "@types/mocha": "^10.0.7",
    "@types/sinon": "^17.0.3",
    "chai": "^4.5.0",
    "firebase-functions-test": "^3.1.0",
    "glob": "^11.0.3",
    "mocha": "^10.7.3",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "private": true
}
